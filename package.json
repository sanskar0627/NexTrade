    "ioredis": "^5.8.0",
    "lightweight-charts": "^4.1.6",
    "lucide-react": "^0.544.0",
    "next": "^14.2.4",
    "next-auth": "^4.24.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
